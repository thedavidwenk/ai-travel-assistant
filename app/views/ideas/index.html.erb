<h1>Ideas#index</h1>
<div class="position-relative">
  <div class="d-flex justify-content-center row">
    <div class="search">
      <%= form_with url: ideas_path, method: :get, local: true, class: 'd-flex w-100 align-items-center justify-content-between' do %>
        <div class="d-flex align-items-center">
          <i class="fa fa-search side-icon"></i>
          <input type="text" class="search-input" placeholder="Search by location ..." name="location" value="<%= params[:location] %>">
        </div>
        <button type="submit" class="search-button">
            Search
        </button>
      <% end %>  
    </div>
  </div>  
</div>

<div>
  <% if @responses.present? %>
    <% @responses.each do |response| %>
    <p>
      <%= response %>
    </p>
    <% end %>
  <% else %>
    <p>
      Search for a location
    </p>   
  <% end %>  
</div>
